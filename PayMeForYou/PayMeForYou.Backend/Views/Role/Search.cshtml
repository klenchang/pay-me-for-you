@using PayMeForYou.Entity.Views.Role;
@model List<RoleView>;

@if (Model != null && Model.Count > 0)
{
    <div class="w3-responsive">
        <table class="w3-table-all w3-hoverable">
            <tr>
                <th></th>
                <th>Role Name</th>
                <th>Description</th>
                <th>Action</th>
            </tr>
            @foreach (var row in Model)
            {
                <tr>
                    <td>@row.RowNo</td>
                    <td>@row.RoleName</td>
                    <td>@row.Description</td>
                    <td>
                        <a class="w3-button w3-hover-text-light-grey material-icons w3-row-padding" onclick="partialLoad();" title="edit" asp-controller="role" asp-action="update" asp-route-id="@row.Id">create</a>
                    </td>
                </tr>
            }
        </table>
    </div>
    @await Component.InvokeAsync("Pagination")
}
else
{
    <div>no data</div>
}